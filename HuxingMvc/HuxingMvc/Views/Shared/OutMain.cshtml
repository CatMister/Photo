    <div class="tutu">
        图图交易
    </div>
    <div class="search-box2">
        <form action="OutMain" method="post">
            <input type="text" id="seachphoto" class="search2" name="Like" placeholder="搜索图片">
            <input class="search-btn2" type="submit">搜索
        </form>
    </div>
    <div class="daohan">
        <ul>
            <li>@Html.ActionLink("图片", "PhotoList", "Community")</li>
            <li>@Html.ActionLink("文章", "NewList", "Community")</li>
        </ul>
    </div>

    @RenderBody()

</body>
</html>


